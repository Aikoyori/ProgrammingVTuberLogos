// Load all images in the project except those in the _site folder
const files = await import.meta.glob<{ default: { src: string, format: string }}>(["../../../**/*.{png,svg}", "!../../../_site/**/*"], { eager: true })
const images = Object.keys(files).map((file) => {
  const { src, format } = files[file].default

  return {
    src,
    folder: file.split('/').slice(-2, -1).pop(),
    name: file.split('/').pop(),
    format,
  }
})

